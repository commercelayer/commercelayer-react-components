{
  "name": "@commercelayer/core",
  "version": "1.0.0",
  "description": "Commerce Layer Components Core SDK",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": ["jamstack", "headless", "ecommerce", "api", "components"],
  "scripts": {
    "lint": "biome lint --error-on-warnings ./src",
    "lint:fix": "pnpm biome lint --write ./src",
    "test": "pnpm run lint && vitest --silent",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsup"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Alessandro Casazza",
    "email": "alessandro@commercelayer.io"
  },
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.4",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@commercelayer/js-auth": "^6.7.0",
    "@commercelayer/sdk": "6.29.2",
    "jwt-decode": "^4.0.0"
  }
}
